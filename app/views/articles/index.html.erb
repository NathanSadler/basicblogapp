<h1>Articles</h1>
<ul>
  <%= link_to "Create a new article", new_article_path %>

  <!-- Displays a link to each article -->
  <% @articles.each do |article| %>
    <li>
      <% comment_count = article.comments.length %>
      <%= link_to "#{article.title} (#{comment_count} #{comment_count == 1 ?
      "comment" : "comments"})", article %>
    </li>
  <% end %>
</ul>
