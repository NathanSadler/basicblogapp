<!-- Displays an article-->
<div padding>
<h1> <%= @article.title %> </h1>
<p> <%= @article.body %> </p>

<!-- Takes user back to list of all articles -->
<p><%= link_to "See all articles", articles_path %></p>

<!-- Takes user to form to edit this article -->
<p><%= link_to "Edit", edit_article_path(@article) %></p>

<!-- Lets user delete this article -->
<p><%= link_to "Delete this article", article_path(@article), method: :delete,
data: {confirm: "Are you sure?"}%></p>

<!-- Displays comments -->
<h2> Comments </h2>
<%= render @article.comments %>

<h2> Add a Comment </h2>
<%= render 'comments/form' %>
</div>
